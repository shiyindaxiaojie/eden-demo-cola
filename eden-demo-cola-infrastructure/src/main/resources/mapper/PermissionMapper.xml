<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ylzl.eden.demo.infrastructure.permission.database.PermissionMapper">

	<resultMap id="dbResultMap"
			   type="org.ylzl.eden.demo.infrastructure.permission.database.dataobject.PermissionDO">
		<result column="id" property="id"/>
		<result column="code" property="code"/>
		<result column="name" property="name"/>
		<result column="type" property="type"/>
		<result column="parent_id" property="parentId"/>
		<result column="description" property="description"/>
		<result column="sort" property="sort"/>
		<result column="created_at" property="createdAt"/>
		<result column="updated_at" property="updatedAt"/>
	</resultMap>

	<sql id="baseColumns">
		id, code, name, type, parent_id, description, sort, created_at, updated_at
	</sql>

	<select id="selectByCode" resultMap="dbResultMap">
		SELECT <include refid="baseColumns"/>
		FROM demo_permission
		WHERE code = #{code}
	</select>

	<select id="countByCode" resultType="int">
		SELECT COUNT(1)
		FROM demo_permission
		WHERE code = #{code}
	</select>

	<select id="selectByIds" resultMap="dbResultMap">
		SELECT <include refid="baseColumns"/>
		FROM demo_permission
		WHERE id IN
		<foreach collection="ids" item="id" open="(" separator="," close=")">
			#{id}
		</foreach>
	</select>

	<select id="selectAll" resultMap="dbResultMap">
		SELECT <include refid="baseColumns"/>
		FROM demo_permission
		ORDER BY sort ASC
	</select>

	<select id="countRoleByPermissionId" resultType="int">
		SELECT COUNT(1)
		FROM demo_role_permission
		WHERE permission_id = #{permissionId}
	</select>

</mapper>
