<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ylzl.eden.demo.infrastructure.role.database.RoleMenuMapper">

	<insert id="batchInsert">
		INSERT INTO demo_role_menu (role_id, menu_id)
		VALUES
		<foreach collection="menuIds" item="menuId" separator=",">
			(#{roleId}, #{menuId})
		</foreach>
	</insert>

	<delete id="deleteByRoleId">
		DELETE FROM demo_role_menu
		WHERE role_id = #{roleId}
	</delete>

	<select id="selectMenuIdsByRoleId" resultType="java.lang.Long">
		SELECT menu_id
		FROM demo_role_menu
		WHERE role_id = #{roleId}
	</select>

	<select id="countByMenuId" resultType="int">
		SELECT COUNT(1)
		FROM demo_role_menu
		WHERE menu_id = #{menuId}
	</select>

</mapper>
