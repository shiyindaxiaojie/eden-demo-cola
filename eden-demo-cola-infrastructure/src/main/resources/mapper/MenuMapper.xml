<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ylzl.eden.demo.infrastructure.menu.database.MenuMapper">

	<resultMap id="dbResultMap"
			   type="org.ylzl.eden.demo.infrastructure.menu.database.dataobject.MenuDO">
		<result column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="path" property="path"/>
		<result column="icon" property="icon"/>
		<result column="parent_id" property="parentId"/>
		<result column="sort" property="sort"/>
		<result column="status" property="status"/>
		<result column="component" property="component"/>
		<result column="created_at" property="createdAt"/>
		<result column="updated_at" property="updatedAt"/>
	</resultMap>

	<sql id="baseColumns">
		id, name, path, icon, parent_id, sort, status, component, created_at, updated_at
	</sql>

	<select id="countByPath" resultType="int">
		SELECT COUNT(1)
		FROM demo_menu
		WHERE path = #{path}
	</select>

	<select id="countByPathExcludeId" resultType="int">
		SELECT COUNT(1)
		FROM demo_menu
		WHERE path = #{path}
		AND id != #{excludeId}
	</select>

	<select id="selectByIds" resultMap="dbResultMap">
		SELECT <include refid="baseColumns"/>
		FROM demo_menu
		WHERE id IN
		<foreach collection="ids" item="id" open="(" separator="," close=")">
			#{id}
		</foreach>
	</select>

	<select id="selectAll" resultMap="dbResultMap">
		SELECT <include refid="baseColumns"/>
		FROM demo_menu
		ORDER BY sort ASC
	</select>

	<select id="selectAllVisible" resultMap="dbResultMap">
		SELECT <include refid="baseColumns"/>
		FROM demo_menu
		WHERE status = 1
		ORDER BY sort ASC
	</select>

	<select id="selectByParentId" resultMap="dbResultMap">
		SELECT <include refid="baseColumns"/>
		FROM demo_menu
		WHERE parent_id = #{parentId}
		ORDER BY sort ASC
	</select>

	<select id="countByParentId" resultType="int">
		SELECT COUNT(1)
		FROM demo_menu
		WHERE parent_id = #{parentId}
	</select>

	<select id="countRoleByMenuId" resultType="int">
		SELECT COUNT(1)
		FROM demo_role_menu
		WHERE menu_id = #{menuId}
	</select>

</mapper>
