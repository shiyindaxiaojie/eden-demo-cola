<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
	"-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
	"https://checkstyle.org/dtds/suppressions_1_2.dtd">

<!--
	Checkstyle 抑制规则配置
	用于排除特定文件或规则的检查
-->
<suppressions>
	<!-- 排除测试类的 Javadoc 检查 -->
	<suppress checks="JavadocMethod" files=".*Test\.java$"/>
	<suppress checks="JavadocType" files=".*Test\.java$"/>
	<suppress checks="MissingJavadocMethod" files=".*Test\.java$"/>
	<suppress checks="MissingJavadocType" files=".*Test\.java$"/>

	<!-- 排除 package-info.java 的部分检查 -->
	<suppress checks="JavadocPackage" files="package-info\.java$"/>

	<!-- 排除生成的代码 -->
	<suppress checks=".*" files=".*[\\/]generated[\\/].*"/>
	<suppress checks=".*" files=".*[\\/]target[\\/].*"/>

	<!-- 排除 DTO/VO/DO 等数据对象的 Javadoc 检查 -->
	<suppress checks="MissingJavadocMethod" files=".*DO\.java$"/>
	<suppress checks="MissingJavadocMethod" files=".*DTO\.java$"/>
	<suppress checks="MissingJavadocMethod" files=".*VO\.java$"/>
	<suppress checks="MissingJavadocMethod" files=".*Query\.java$"/>
	<suppress checks="MissingJavadocMethod" files=".*Cmd\.java$"/>
	<suppress checks="MissingJavadocMethod" files=".*Request\.java$"/>
	<suppress checks="MissingJavadocMethod" files=".*Response\.java$"/>

	<!-- 排除 Mapper 接口的 Javadoc 检查（MyBatis 会自动生成实现） -->
	<suppress checks="MissingJavadocMethod" files=".*Mapper\.java$"/>

	<!-- 排除 Convertor 转换器的 Javadoc 检查 -->
	<suppress checks="MissingJavadocMethod" files=".*Convertor\.java$"/>

	<!-- 排除启动类的 Javadoc 检查 -->
	<suppress checks="MissingJavadocMethod" files=".*Application\.java$"/>
	<suppress checks="HideUtilityClassConstructor" files=".*Application\.java$"/>
</suppressions>
